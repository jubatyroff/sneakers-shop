<%- include("../partials/header") %>

<title>Главная страница</title>
</head>
<body>
<%- include("../partials/navbar") %>
<%- include("../partials/flash") %>
<main>
    <div class="container" style="margin-top: 30px">
        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel" >
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="images/Добавить основной текст (12).png" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="images/Добавить основной текст (10).png" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="images/Добавить основной текст (11).png" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

    <div class="conatainer">
    <hr>
    <h4 style="text-align: center;">Кроссовки</h4>
    <hr>
    <section class="product-holder my-3">
        <% if(data.length<1){ %>
            <h3 class="text-center my-3">Sorry no products are available</h3>
        <%}
        else{%>
            <div class="card-row my-3 row d-flex justify-content-evenly">

                <% for(let index=data.length-1;index>=0;index--){
                    let item=data[index];
                %>

                <div class="product-card card col-md-3 ">
                    <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light" style="border-radius: 12px 12px 0px 0px;">

                        <% if(item.image !=undefined && item.image.data!=undefined){ %>
                        <img
                                src="data:image/<%=item.image.contentType%>;base64,<%=item.image.data.toString('base64')%>"
                                class="img-fluid"
                        />
                        <%}
                        else{ %>
                        <img
                                src="<%=item.img%>"
                                class="img-fluid"
                                alt="Item Image"
                                class="img-fluid"
                        />
                        <%}%>
                        <a href="#!">
                            <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                        </a>
                    </div>
                    <div class="card-body ">
                        <h5 class="card-title"> <%= item.name%> </h5>
                        <h6 class="card-subtitle mb-2 text-muted">Цена   &#8376; <%=item.price%></h6>
                        <p class="card-text">
                            <%=item.desc.slice(0,90)%>...
                        </p>
                        <a href="/products/<%=item._id%>" class="btn btn-dark">Посмотреть больше</a>
                    </div>
                </div>
                <%}%>
            </div>
        <%}%>

    </section>
    </div>
    </div>
</main>
<%- include("../partials/footer") %>